@model DemoUsuarios.Models.UsuarioModels.Usuario
@{
    ViewBag.Title = "Update";
}

<h2>Update Usuarios</h2>
@using (Html.BeginForm("Update", "Usuario", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">

            @Html.HiddenFor(d=>d.Id)

            @Html.LabelFor(u => u.Username)
            @Html.TextBoxFor(u => u.Username, "", new { @class = "form-control" })
            @Html.LabelFor(u => u.Password)
            @Html.TextBoxFor(u => u.Password, "", new { @class = "form-control", @type = "password" })
            @Html.LabelFor(u => u.IdPersona, "Persona", htmlAttributes: new { @class = "control-label" })
            @Html.DropDownListFor(u => u.IdPersona, new SelectList(Model.Persona, "IdPersona", "Nombres"), new { @class = "form-control" })
        </div>

    </div>
    <div class="row">
        <div class="col-md-12" style="padding:30px;">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            <input type="button" value="Cancelar" class="btn btn-primary" onclick="location.href='@Url.Action("Usuario","Usuario")'" />
        </div>
    </div>
}


